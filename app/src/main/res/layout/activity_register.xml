<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingHorizontal="30dp"
    tools:context="ppl.app.tixpark.RegisterActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarLogin"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="start|bottom"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_marginStart="-15dp"
        android:layout_marginEnd="-15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </com.google.android.material.appbar.MaterialToolbar>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Now"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/toolbarLogin"
        app:layout_constraintStart_toStartOf="parent"
        />

    <LinearLayout
        android:id="@+id/textFieldUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:background="@drawable/round_gray_bg"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivUsernameIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_user"
            app:tint="@color/black50" />


        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="10dp"
            android:textColorHint="@color/black50"
            android:hint="Username"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:background="@color/transparent"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textFieldPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textFieldUsername"
        android:background="@drawable/round_gray_bg"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPhoneIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_phone"
            android:layout_marginStart="20dp"
            app:tint="@color/black50" />


        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="10dp"
            android:textColorHint="@color/black50"
            android:hint="Phone Number"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:background="@color/transparent"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textFieldEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textFieldPhone"
        android:background="@drawable/round_gray_bg"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivEmailIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_email"
            app:tint="@color/black50" />


        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="10dp"
            android:textColorHint="@color/black50"
            android:hint="Email Address"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:background="@color/transparent"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textFieldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textFieldEmail"
        android:background="@drawable/round_gray_bg"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPasswordIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_password"
            android:layout_marginStart="20dp"
            app:tint="@color/black50" />


        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="10dp"
            android:textColorHint="@color/black50"
            android:hint="Password"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:background="@color/transparent"
            />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:text="Register"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@id/textFieldPassword"
        android:layout_marginTop="230dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/round_red_bg"/>

    <LinearLayout
        android:id="@+id/btLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/btnRegister">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textSize="14sp"
            android:textColor="@color/black50"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In Now"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/red"
            android:textAllCaps="false"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

